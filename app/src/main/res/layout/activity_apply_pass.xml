<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply_pass"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent"
    tools:context="firebaseapps.com.pass.UI.ApplyPass"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="30"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/ApplyForAPass"
                    android:paddingTop="1dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:src="@drawable/applypass_start"
                        android:layout_height="100dp" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:text="Submit Application"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ChangePassDetails"
                    android:paddingTop="1dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:src="@mipmap/ic_application_write"
                        android:layout_height="100dp" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:text="Edit Application"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_weight="30"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:gravity="center|top"
                    android:id="@+id/ApplicationPreview"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:src="@mipmap/ic_review"
                        android:layout_height="100dp" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:text="Application Preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:gravity="center|top"
                    android:id="@+id/EnterVehicleDetails"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:src="@drawable/vehicle"
                        android:layout_height="100dp" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:text="Enter Vehicle Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_weight="30"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:id="@+id/ViewPass"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:src="@drawable/pass"
                        android:layout_height="100dp" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:text="View Pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:gravity="center|top"
                    android:id="@+id/CheckPassStatus"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:src="@mipmap/ic_pass_status"
                        android:layout_height="100dp" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:text="Check Pass Status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:src="@drawable/faq"
                    android:layout_height="100dp" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#ffff"
                    android:text="FAQs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</LinearLayout>